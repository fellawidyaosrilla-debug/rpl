generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum StatusLaporan {
  MENUNGGU_VERIFIKASI
  DIPUBLIKASIKAN
  DIKLAIM
  SELESAI
  DITOLAK
}

enum StatusKlaim {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id         Int       @id @default(autoincrement())
  username   String    @unique
  password   String
  nama       String
  no_hp      String    @unique
  alamat     String?
  role       Role      @default(USER)
  created_at DateTime  @default(now())

  laporan    Laporan[]
  klaim      Klaim[]
  notifikasi Notifikasi[]
}

model Laporan {
  id          Int           @id @default(autoincrement())
  user_id     Int
  user        User          @relation(fields: [user_id], references: [id])
  nama_barang String
  lokasi      String
  jenis_laporan String   @default("KEHILANGAN") // Opsinya: 'KEHILANGAN' atau 'DITEMUKAN'
  foto        String?
  status      StatusLaporan @default(MENUNGGU_VERIFIKASI)
  created_at  DateTime      @default(now())

  klaim       Klaim[]
}

model Klaim {
  id_klaim      Int      @id @default(autoincrement())
  
  // Relasi ke User
  user_id       Int
  user          User     @relation(fields: [user_id], references: [id])
  
  // Relasi ke Laporan
  laporan_id    Int
  
  // === PERBAIKAN DI SINI (Ganti id_laporan jadi id) ===
  laporan       Laporan  @relation(fields: [laporan_id], references: [id]) 

  // Bukti-bukti
  deskripsi_klaim String  @db.Text
  kronologi       String  @db.Text
  foto_bukti      String? 

  status          String  @default("PENDING") 
  created_at      DateTime @default(now())
}

model Notifikasi {
  id         Int      @id @default(autoincrement())
  user_id    Int
  user       User     @relation(fields: [user_id], references: [id])
  judul      String
  pesan      String
  is_read    Boolean  @default(false)
  created_at DateTime @default(now())
}
